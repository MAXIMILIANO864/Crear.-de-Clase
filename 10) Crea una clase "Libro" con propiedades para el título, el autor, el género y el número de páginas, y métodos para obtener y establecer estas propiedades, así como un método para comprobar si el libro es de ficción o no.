class Libro:
    def __init__(self, titulo: str, autor: str, genero: str, paginas: int):
        self._titulo = titulo
        self._autor = autor
        self._genero = genero
        self._paginas = paginas
    def get_titulo(self):
        return self._titulo
    def get_autor(self):
        return self._autor
    def get_genero(self):
        return self._genero
    def get_paginas(self):
        return self._paginas
    def set_titulo(self, titulo: str):
        self._titulo = titulo
    def set_autor(self, autor: str):
        self._autor = autor
    def set_genero(self, genero: str):
        self._genero = genero
    def set_paginas(self, paginas: int):
        if paginas > 0:
            self._paginas = paginas
    def es_ficcion(self):
        return self._genero.lower() == "ficción"
if __name__ == "__main__":
    libro1 = Libro("1984", "George Orwell", "Ficción", 328)
    libro2 = Libro("Breve historia del tiempo", "Stephen Hawking", "Ciencia", 212)
    print(f"Título: {libro1.get_titulo()}, Autor: {libro1.get_autor()}")
    print("¿Es ficción?", libro1.es_ficcion())
    print(f"\nTítulo: {libro2.get_titulo()}, Autor: {libro2.get_autor()}")
    print("¿Es ficción?", libro2.es_ficcion())
    libro2.set_genero("Ficción")
    print("\nDespués de actualizar el género del libro 2:")
    print("¿Es ficción?", libro2.es_ficcion())
